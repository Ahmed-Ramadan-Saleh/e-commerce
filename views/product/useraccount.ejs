<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= mytitle %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="../css/footer.css">
    <link rel="stylesheet" href="../css/navbar.css" />

    <style>
        /* Styles for dark and light mode */
        body.light-mode {
            background-color: #f8f9fa;
            color: #343a40;
        }

        .card.light-mode {
            background-color: #ffffff;
        }

        body.dark-mode {
            background-color: #343a40;
            color: #f8f9fa;
        }

        .card.dark-mode {
            background-color: #495057;
        }

        /* Toggle Button Styles */
        .toggle-mode-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
        }



        footer a {
            color: #fff;
        }

        footer a:hover {
            color: #adb5bd;
        }

        .order-table th, .order-table td {
            vertical-align: middle;
        }
    </style>
</head>
<body class="light-mode">

<!-- Navbar -->
<%- include('../component/navbar.ejs') %>











<!-- Account Section -->
<div class="container mt-5">
    <h2>My Account</h2>
<% if (dataOfUser !== null) { %>
 
    <!-- Personal Information -->
    <div class="card shadow-sm light-mode mb-4">
      <div class="card-body">
          <h5 class="card-title">Personal Information</h5>



          <form action="/updatedatauser" method="post">
              <div class="form-group">
                  <label for="fullName">Full Name</label>
                  <input name="username" value="<%= dataOfUser.username %>" type="text" class="form-control" id="fullName" placeholder="Ahmed" required>
              </div>
              <div class="form-group">
                  <label for="email">Email Address</label>
                  <input name="email" value="<%= dataOfUser.email %>" type="email" class="form-control" id="email" placeholder="ahmed.doe@example.com" required>
              </div>
              <div class="form-group">
                  <label for="phone">Phone Number</label>
                  <input name="phonenumber" value="<%= dataOfUser.phonenumber %>" type="tel" class="form-control" id="phone" placeholder="+1 (555) 123-4567" required>
              </div>
              <button type="submit" class="btn btn-primary">Update Information</button>
          </form>



          
      </div>
  </div>

  <!-- Order History -->
  <div class="card shadow-sm light-mode">
      <div class="card-body">
          <h5 class="card-title">Order History</h5>
          <table class="table order-table">
              <thead>
                  <tr>
                      <th scope="col">Order ID</th>
                      <th scope="col">Date</th>
                      <th scope="col">Total</th>
                      <th scope="col">Status</th>
                      <th scope="col">Details</th>
                  </tr>
              </thead>
              <tbody>
                  <!-- Sample Order Row -->
<% dataOfUser.ProductCards.forEach(element => { %>
  <tr>
    <td><%= element._id %></td>
    <td><%=   momen_t(element.updatedAt).format("MMM Do YY");%></td>
    <td>$ <%= element.price %></td>
    <td>Shipped</td>
    <td><a href="/orders/<%=element._id %>" class="btn btn-info btn-sm">View Details</a></td>
</tr>
<% }) %>




                  <!-- Add more order rows as needed -->
              </tbody>
          </table>
      </div>
  </div>



<% } %>



<% if (dataOfUser == null) { %>
 
    <!-- Personal Information -->
    <div class="card shadow-sm light-mode mb-4">
      <div class="card-body">
          <h5 class="card-title">Personal Information</h5>



          <form>
              <div class="form-group">
                  <label for="fullName">Full Name</label>
                  <input type="text" class="form-control" id="fullName" placeholder="John Doe" required>
              </div>
              <div class="form-group">
                  <label for="email">Email Address</label>
                  <input type="email" class="form-control" id="email" placeholder="john.doe@example.com" required>
              </div>
              <div class="form-group">
                  <label for="phone">Phone Number</label>
                  <input type="tel" class="form-control" id="phone" placeholder="+1 (555) 123-4567" required>
              </div>
              <button type="submit" class="btn btn-primary">Update Information</button>
          </form>



          
      </div>
  </div>

  <!-- Order History -->
  <div class="card shadow-sm light-mode">
      <div class="card-body">
          <h5 class="card-title">Order History</h5>
          <table class="table order-table">
              <thead>
                  <tr>
                      <th scope="col">Order ID</th>
                      <th scope="col">Date</th>
                      <th scope="col">Total</th>
                      <th scope="col">Status</th>
                      <th scope="col">Details</th>
                  </tr>
              </thead>
              <tbody>
                  <!-- Sample Order Row -->
                  <tr>
                      <td>#12345</td>
                      <td>2024-07-01</td>
                      <td>$150</td>
                      <td>Shipped</td>
                      <td><a href="#" class="btn btn-info btn-sm">View Details</a></td>
                  </tr>
                  <!-- Add more order rows as needed -->
              </tbody>
          </table>
      </div>
  </div>


  
<% } %>






</div>


















<!-- Footer -->
<%- include('../component/footer.ejs') %>

<!-- Toggle Button -->
<button class="btn btn-secondary toggle-mode-btn" id="toggle-mode"><i class="fas fa-moon"></i></button>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    // Toggle Dark/Light Mode
    document.getElementById('toggle-mode').addEventListener('click', function() {
        document.body.classList.toggle('dark-mode');
        document.querySelectorAll('.card').forEach(card => card.classList.toggle('dark-mode'));
        this.innerHTML = document.body.classList.contains('dark-mode') ? '<i class="fas fa-sun"></i>' : '<i class="fas fa-moon"></i>';
    });
</script>
</body>
</html>

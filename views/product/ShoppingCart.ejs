<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= mytitle %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="../css/footer.css">
    <link rel="stylesheet" href="../css/navbar.css" />

    <style>
        /* Styles for dark and light mode */
        body.light-mode {
            background-color: #f8f9fa;
            color: #343a40;
        }

        .card.light-mode {
            background-color: #ffffff;
        }

        body.dark-mode {
            background-color: #343a40;
            color: #f8f9fa;
        }

        .card.dark-mode {
            background-color: #495057;
        }

        /* Toggle Button Styles */
        .toggle-mode-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
        }

        .cart-item img {
            max-width: 100px;
            object-fit: cover;
        }

        .cart-item {
            margin-bottom: 15px;
        }

        footer {
            padding: 10px 0;
            background-color: #6c757d;
            color: #fff;
        }

        footer a {
            color: #fff;
        }

        footer a:hover {
            color: #adb5bd;
        }
    </style>
</head>
<body class="light-mode">

<!-- Navbar -->
<%- include('../component/navbar.ejs') %>









<!-- Cart Section -->
<div class="container mt-5">
    <h2>Your Shopping Cart</h2>
    <div class="cart-items">
        <!-- Sample Cart Item -->
         <% let TotalPrice = 0;%>

         <% if (allcards !== null) { %>
          <% allcards.forEach((element, index )=> { %>
            <div class="row cart-item">
              <div class="col-md-3">
  
                <img <% if (element.images[0]) { %> src="<%=
                element.images[0] %>" <% } else { %>
                  src="https://via.placeholder.com/100" <% } %>
                  alt="Product Image"
                />
  
              </div>
              <div class="col-md-6">
                  <h5>Product Name : <%= element.productname %></h5>
                  <% TotalPrice += element.price %>
                  <p><strong>Price:</strong> $<%= element.price %></p>
              </div>
              <div class="col-md-3 text-right">
                  <div class="form-inline">
                    <form action="/removeoncard/<%= element._id %>" method="post">
                      <button type="submit" class="btn btn-danger btn-sm">Remove</button>

                    </form>
                  </div>
              </div>
          </div>
           <% }) %>
         <% } %>


    </div>

    <!-- Cart Summary -->
    <div class="cart-summary mt-4">
        <h4>Cart Summary</h4>
        <p><strong>Total Items:</strong> <%= allcards.length %></p>
        <p><strong>Total Price:</strong> $<%= TotalPrice %></p>
        <a href="/Checkout" class="btn btn-primary btn-lg">Proceed to Checkout</a>
    </div>
</div>



















<!-- Footer -->
<%- include('../component/footer.ejs') %>


<!-- Toggle Button -->
<button class="btn btn-secondary toggle-mode-btn" id="toggle-mode"><i class="fas fa-moon"></i> </button>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    // Toggle Dark/Light Mode
    document.getElementById('toggle-mode').addEventListener('click', function() {
        document.body.classList.toggle('dark-mode');
        document.querySelectorAll('.card').forEach(card => card.classList.toggle('dark-mode'));
        this.innerHTML = document.body.classList.contains('dark-mode') ? '<i class="fas fa-sun"></i> ' : '<i class="fas fa-moon"></i> ';
    });
</script>
</body>
</html>

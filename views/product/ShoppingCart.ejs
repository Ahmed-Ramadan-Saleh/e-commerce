<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= mytitle %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="../css/footer.css">

    <style>
        /* Styles for dark and light mode */
        body.light-mode {
            background-color: #f8f9fa;
            color: #343a40;
        }

        .card.light-mode {
            background-color: #ffffff;
        }

        body.dark-mode {
            background-color: #343a40;
            color: #f8f9fa;
        }

        .card.dark-mode {
            background-color: #495057;
        }

        /* Toggle Button Styles */
        .toggle-mode-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
        }

        .cart-item img {
            max-width: 100px;
            object-fit: cover;
        }

        .cart-item {
            margin-bottom: 15px;
        }

        footer {
            padding: 10px 0;
            background-color: #6c757d;
            color: #fff;
        }

        footer a {
            color: #fff;
        }

        footer a:hover {
            color: #adb5bd;
        }
    </style>
</head>
<body class="light-mode">

<!-- Navbar -->
<%- include('../component/navbar.ejs') %>


<!-- Cart Section -->
<div class="container mt-5">
    <h2>Your Shopping Cart</h2>
    <div class="cart-items">
        <!-- Sample Cart Item -->
        <div class="row cart-item">
            <div class="col-md-3">
                <img src="https://via.placeholder.com/100" alt="Product Image">
            </div>
            <div class="col-md-6">
                <h5>Product Name</h5>
                <p><strong>Price:</strong> $150</p>
            </div>
            <div class="col-md-3 text-right">
                <div class="form-inline">
                    <label class="my-1 mr-2" for="quantity">Quantity:</label>
                    <input type="number" class="form-control mb-2 mr-sm-2" id="quantity" value="1" min="1" style="width: 80px;">
                    <button class="btn btn-danger btn-sm">Remove</button>
                </div>
            </div>
        </div>
        <!-- Add more cart items as needed -->
    </div>

    <!-- Cart Summary -->
    <div class="cart-summary mt-4">
        <h4>Cart Summary</h4>
        <p><strong>Total Items:</strong> 1</p>
        <p><strong>Total Price:</strong> $150</p>
        <a href="#" class="btn btn-primary btn-lg">Proceed to Checkout</a>
    </div>
</div>

<!-- Footer -->
<%- include('../component/footer.ejs') %>


<!-- Toggle Button -->
<button class="btn btn-secondary toggle-mode-btn" id="toggle-mode"><i class="fas fa-moon"></i> Dark Mode</button>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    // Toggle Dark/Light Mode
    document.getElementById('toggle-mode').addEventListener('click', function() {
        document.body.classList.toggle('dark-mode');
        document.querySelectorAll('.card').forEach(card => card.classList.toggle('dark-mode'));
        this.innerHTML = document.body.classList.contains('dark-mode') ? '<i class="fas fa-sun"></i> Light Mode' : '<i class="fas fa-moon"></i> Dark Mode';
    });
</script>
</body>
</html>

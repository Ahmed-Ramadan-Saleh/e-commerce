<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= mytitle %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="../css/footer.css">

    <style>
        /* Styles for dark and light mode */
        body.light-mode {
            background-color: #f8f9fa;
            color: #343a40;
        }

        .card.light-mode {
            background-color: #ffffff;
        }

        body.dark-mode {
            background-color: #343a40;
            color: #f8f9fa;
        }

        .card.dark-mode {
            background-color: #495057;
        }

        /* Toggle Button Styles */
        .toggle-mode-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
        }

        .product-images {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .product-images img {
            max-width: 100%;
            max-height: 400px;
            object-fit: contain;
            margin-bottom: 15px;
        }

        .product-details {
            margin-top: 20px;
        }

        .ratings i {
            color: #ffcc00;
        }

        .related-products {
            margin-top: 30px;
        }

        footer {
            padding: 10px 0;
            background-color: #6c757d;
            color: #fff;
        }

        footer a {
            color: #fff;
        }

        footer a:hover {
            color: #adb5bd;
        }
    </style>
</head>
<body class="light-mode">

<!-- Navbar -->
<%- include('../component/navbar.ejs') %>


<!-- Product Details Section -->
<div class="container mt-5">
    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6 product-images">
            <img src="https://via.placeholder.com/500" alt="Product Image">
            <div>
                <img src="https://via.placeholder.com/100" alt="Product Image 1" class="img-thumbnail">
                <img src="https://via.placeholder.com/100" alt="Product Image 2" class="img-thumbnail">
                <img src="https://via.placeholder.com/100" alt="Product Image 3" class="img-thumbnail">
            </div>
        </div>
        <!-- Product Details -->
        <div class="col-md-6 product-details">
            <h2>Product Name</h2>
            <div class="ratings">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="far fa-star"></i>
                <span>(10 reviews)</span>
            </div>
            <p class="price"><strong>Price:</strong> $150</p>
            <p class="description">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent venenatis enim eget mi elementum, in venenatis ex elementum.
            </p>
            <button class="btn btn-primary btn-lg"><i class="fas fa-shopping-cart"></i> Add to Cart</button>
        </div>
    </div>

    <!-- Related Products -->
    <div class="related-products">
        <h3>Related Products</h3>
        <div class="row">
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Related Product 1">
                    <div class="card-body">
                        <h5 class="card-title">Related Product 1</h5>
                        <p class="card-text"><strong>Price:</strong> $120</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Related Product 2">
                    <div class="card-body">
                        <h5 class="card-title">Related Product 2</h5>
                        <p class="card-text"><strong>Price:</strong> $140</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Related Product 3">
                    <div class="card-body">
                        <h5 class="card-title">Related Product 3</h5>
                        <p class="card-text"><strong>Price:</strong> $160</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <img src="https://via.placeholder.com/300" class="card-img-top" alt="Related Product 4">
                    <div class="card-body">
                        <h5 class="card-title">Related Product 4</h5>
                        <p class="card-text"><strong>Price:</strong> $180</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<%- include('../component/footer.ejs') %>


<!-- Toggle Button -->
<button class="btn btn-secondary toggle-mode-btn" id="toggle-mode"><i class="fas fa-moon"></i> Dark Mode</button>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    // Toggle Dark/Light Mode
    document.getElementById('toggle-mode').addEventListener('click', function() {
        document.body.classList.toggle('dark-mode');
        document.querySelectorAll('.card').forEach(card => card.classList.toggle('dark-mode'));
        this.innerHTML = document.body.classList.contains('dark-mode') ? '<i class="fas fa-sun"></i> Light Mode' : '<i class="fas fa-moon"></i> Dark Mode';
    });
</script>
</body>
</html>

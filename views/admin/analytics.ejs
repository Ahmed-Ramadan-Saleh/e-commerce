<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= mytitle %></title>
    <!-- Add Bootstrap Icons CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../css/sidebars.css" />
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        background-color: #f4f6f9;
        padding: 20px;
      }
      .analytics-container {
        width: 100%;
        margin: auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
      }
      .analytics-header {
        margin-bottom: 30px;
        text-align: center;
      }
      .analytics-header h2 {
        font-size: 36px;
        margin: 0;
        /* color: #333; */
      }
      .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 30px;
      }
      .card {
        flex: 1 1 calc(25% - 20px); /* Take up 25% of the container width minus gap */
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s;
        box-sizing: border-box; /* Ensure padding and border are included in the width */
      }
      .card:hover {
        transform: scale(1.05);
      }
      .card h3 {
        margin: 0;
        font-size: 24px;
        /* color: #333; */
      }
      .card p {
        font-size: 20px;
        /* color: #555; */
      }
      .charts-container {
        display: flex;
        flex-direction: column;
        gap: 30px;
        margin-bottom: 40px;
      }
      .chart {
        /* background-color: #fff; */
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        box-sizing: border-box;
        height: 400px; /* Default height for larger screens */
      }
      .chart h3 {
        margin-top: 0;
        font-size: 24px;
        /* color: #333; */
      }
      .table-container {
        overflow-x: auto;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
      }
      table th,
      table td {
        padding: 15px;
        border: 1px solid #ddd;
        text-align: left;
      }
      table th {
        /* background-color: #f9f9f9; */
        /* color: #333; */
        font-size: 16px;
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        .card-container {
          flex-direction: column;
        }
        .card {
          flex: 1 1 100%;
          margin-bottom: 20px;
        }
        .chart {
          height: 300px;
        }
      }
      /* light and dark mode */
      .dark-mode .analytics-container {
        background-color: #202324; /* لون الخلفية للوضع الليلي */
        color: #aba499; /* لون النص للوضع الليلي */
      }
      .dark-mode .card {
        background-color: #4d5658; /* لون الخلفية للوضع الليلي */
        color: #aba499; /* لون النص للوضع الليلي */
      }
    </style>
  </head>
  <body>
    <%- include('../component/admincompo/sidebar.ejs') %>
    <div style="margin-left: 20px" class="analytics-container">
      <div class="analytics-header">
        <h2>Analytics Dashboard</h2>
      </div>

      <div class="card-container">
        <div class="card">
          <h3>Total Sales</h3>
          <p>$12,345</p>
        </div>
        <div class="card">
          <h3>Total Orders</h3>
          <p>567</p>
        </div>
        <div class="card">
          <h3>Total Customers</h3>
          <p>1234</p>
        </div>
        <div class="card">
          <h3>Revenue This Month</h3>
          <p>$4,567</p>
        </div>
      </div>

      <div class="charts-container">
        <div class="chart">
          <h3>Sales Trend</h3>
          <canvas id="salesTrendChart"></canvas>
        </div>
        <div class="chart">
          <h3>Orders by Category</h3>
          <canvas id="ordersCategoryChart"></canvas>
        </div>
      </div>

      <div class="table-container">
        <h3>Recent Orders</h3>
        <table>
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Date</th>
              <th>Amount</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>#1021</td>
              <td>John Doe</td>
              <td>July 31, 2024</td>
              <td>$300</td>
              <td>Completed</td>
            </tr>
            <tr>
              <td>#1022</td>
              <td>Jane Smith</td>
              <td>July 31, 2024</td>
              <td>$150</td>
              <td>Pending</td>
            </tr>
            <tr>
              <td>#1023</td>
              <td>Michael Johnson</td>
              <td>August 1, 2024</td>
              <td>$450</td>
              <td>Shipped</td>
            </tr>
            <!-- المزيد من الطلبات يمكن إضافتها هنا -->
          </tbody>
        </table>
      </div>
    </div>

    <script src="../js/sidebars.js"></script>
    <!-- Include chart library -->

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
      // Example chart initialization with Chart.js
      var ctx1 = document.getElementById("salesTrendChart").getContext("2d");
      var salesTrendChart = new Chart(ctx1, {
        type: "line",
        data: {
          labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul"],
          datasets: [
            {
              label: "Sales Trend",
              data: [1200, 1900, 3000, 2500, 2200, 2800, 3100],
              borderColor: "rgba(75, 192, 192, 1)",
              backgroundColor: "rgba(75, 192, 192, 0.2)",
              borderWidth: 2,
            },
          ],
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
        },
      });

      var ctx2 = document
        .getElementById("ordersCategoryChart")
        .getContext("2d");
      var ordersCategoryChart = new Chart(ctx2, {
        type: "pie",
        data: {
          labels: ["Electronics", "Clothing", "Home", "Books"],
          datasets: [
            {
              label: "Orders by Category",
              data: [300, 150, 200, 100],
              backgroundColor: [
                "rgba(255, 99, 132, 0.2)",
                "rgba(54, 162, 235, 0.2)",
                "rgba(255, 206, 86, 0.2)",
                "rgba(75, 192, 192, 0.2)",
              ],
              borderColor: [
                "rgba(255, 99, 132, 1)",
                "rgba(54, 162, 235, 1)",
                "rgba(255, 206, 86, 1)",
                "rgba(75, 192, 192, 1)",
              ],
              borderWidth: 1,
            },
          ],
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
        },
      });
    </script>
  </body>
</html>

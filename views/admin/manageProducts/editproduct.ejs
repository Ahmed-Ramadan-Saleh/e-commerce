      }
      .dark-mode .table th {
        background-color: #181a1b; /* لون الخلفية للوضع الليلي */
        color: #aba499; /* لون النص للوضع الليلي */
      }
      .dark-mode .table td {
        background-color: #181a1b; /* لون الخلفية للوضع الليلي */
        color: #aba499; /* لون النص للوضع الليلي */

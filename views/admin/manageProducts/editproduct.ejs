  <body>
    <main class="d-flex flex-nowrap w-100">
      <!-- sidebarrrrrrr -->

      <%- include('../../component/admincompo/sidebar.ejs') %>


      <div class="editproducts w-100">
        <!-- content -->

        <!-- edit product -->

        <br /><br /><br />
        <div
          class="border p-3"
          style="margin: auto; border-radius: 8px; width: 80%"
        >
          <div class="d-flex justify-content-between align-items-center">
            <p class="fs-3">Product Information</p>
            <p class="fs-5">id : <%= data._id %></p>
          </div>

          <form
            class="m-4"
            action="/updatproduct/<%= data._id %>?_method=PUT"
            method="post"
            enctype="multipart/form-data"
          >
            <!-- <form action="/uploud" method="post" enctype="multipart/form-data"> -->

            <div class="mb-3">
              <label class="form-label">Product Name</label>
              <input
                value="<%= data.productname %>"
                name="productname"
                type="text"
                class="form-control"
              />
            </div>

            <div class="mb-3">
              <label class="form-label">Discription</label>
              <textarea name="discription" class="form-control" rows="3">
<%= data.discription %></textarea
              >
            </div>

            <div class="mb-3">
              <label class="form-label">Price</label>
              <input
                value="<%= data.price %>"
                name="price"
                type="number"
                class="form-control"
              />
            </div>

            <div class="mb-3">
              <label class="form-label">Count</label>
              <input
                value="<%= data.count %>"
                name="count"
                type="number"
                class="form-control"
              />
            </div>

            <div class="mb-3 d-flex">
              <% data.images.forEach((element, index) => { %>

              <div
                style="width: 25%; height: 25%"
                class="m-2 text-center p-2 border rounded-top"
              >
                <img
                  id="IMGELEMENT<%= index %>"
                  class="my-3 rounded"
                  style="background-color: #ddd; width: 290px; height: 220px"
                  src="<%= element %>"
                  alt=""
                />

                <div
                  id="btn"
                  class="d-flex justify-content-between align-items-center"
                >
                  <!-- form update image -->
                  <label
                    for="file<%= index %>"
                    class="d-block btn btn-bd-primary px-4 mx-3"
                    onclick="Counter('<%= index %>')"
                    >Update</label
                  >

                  <input
                    id="file<%= index %>"
                    name="image"
                    class="d-none"
                    type="file"
                  />

                  <!-- form delete image -->

                  <button
                    type="button"
                    class="d-block btn btn-danger px-4 mx-3"
                    onclick="deleteImage('<%= element %>')"
                  >
                    Delete
                  </button>
                </div>
              </div>

              <% }) %>

              <div id="numberImage"></div>
            </div>

            <label for="uploudAll" class="d-block btn btn-primary mx-3"
              >Update product</label
            >
            <input id="uploudAll" class="d-none" type="submit" />
          </form>
        </div>
      </div>
    </main>

    <script>
      // deleteImage
      function deleteImage(imageUrl) {
        // إنشاء نموذج جديد لإرسال طلب حذف الصورة
        var form = document.createElement("form");
        form.method = "POST";
        form.action = "/deleteimage";

        // إضافة مدخل مخفي يحتوي على رابط الصورة ليتم إرساله إلى السيرفر
        var input = document.createElement("input");
        input.type = "hidden";
        input.name = "image";
        input.value = imageUrl;

        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
      }
    </script>
    <script>
      function Counter(count) {
        console.log(count);
        const idInput = document.getElementById(`file${count}`);
        const idImage = document.getElementById(`IMGELEMENT${count}`);
        idInput.addEventListener("change", (eo) => {
          idImage.src = URL.createObjectURL(eo.target.files[0]);
        });
        // getIndexImage

        numberImage.innerHTML = `<input class="d-none" name="imageindex" value="${count}" type="text">`;
      }
    </script>

    <script src="../js/bootstrap.bundle.min.js"></script>

    <script src="../js/sidebars.js"></script>
  </body>
</html>
